{{> page-header this }}

<div class="alert alert-warning">
  <p class="lead">
    <i class="fa fa-warning"></i> Espace réservé aux juges.
  </p>
</div>

<section>

  <header>
    <h2>Fiche de notation</h2>
  </header>

  <div class="alert alert-info">
    <p>
      Pour accéder à une fiche de votre, sélectionnez le concours.
    </p>
  </div>

  <article>
    <form action="/contest/vote" method="post" >
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <fieldset class="form-group">
            <label class="form-control-label" for="user">Identifiant de juge&nbsp;:</label>
            <input type="text" class="form-control" id="user" name="user" value="{{user}}" >
          </fieldset>
        </div>

        <div class="col-xs-12 col-md-6">
          <fieldset class="form-group">
            <label class="form-control-label" for="email">Concours&nbsp;:</label>
            <select id="contest" name="contest" class="form-control c-select" >
              {{#each contestList}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </fieldset>
        </div>
      </div>
      
      <div class="text-xs-right">
        <button class="btn btn-primary btn-lg" type="submit">
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
          Voir mes votes
        </button>
      </div>

    </form>
  </article>

</section>

{{> page-footer this }}

